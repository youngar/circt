{
  "name": "vscode-hl",
  "displayName": "hl",
  "description": "HL Language Extension",
  "version": "0.0.1",
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension",

  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "engines": {
    "vscode": "^1.87.0"
  },
  "dependencies": {
    "base64-js": "^1.5.1",
    "chokidar": "3.5.2",
    "vscode-languageclient": "^8.0.2-next.5"
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.17.0",
    "@types/vscode": "~1.67.0",
    "@vscode/vsce": "^2.19.0",
    "clang-format": "^1.8.0",
    "typescript": "^4.6.4",
    "vscode/test-electron": "^1.3.0"
  },
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "HL",
      "properties": {
        "hl.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "hl.server_path": {
          "scope": "resource",
          "type": "string",
          "default": "hl-server",
          "description": "The file path of the hl-server executable."
        },
        "hl.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VSCode and the language server."
        }
      }
    },
    "languages": [
      {
        "id": "hl",
        "aliases": [
          "hl",
          "hl"
        ],
        "extensions": [
          "hl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hl",
        "scopeName": "source.hl",
        "path": "./syntaxes/hl.tmLanguage.json"
      }
    ]
  },
  "commands": [
    {
      "command": "hl.restart",
      "title": "hl: Restart language server"
    },
    {
      "command": "hl.helloworld",
      "title": "hl: hello world"
    }
  ]
}